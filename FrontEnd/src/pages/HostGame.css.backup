.host-game-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #F0F8FF 0%, #E0F2FF 100%);
  padding: 20px;
}

.host-game-layout {
  max-width: 1600px;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  gap: 20px;
  height: calc(100vh - 40px);
}

/* Header */
.host-header {
  background: white;
  border-radius: 20px;
  padding: 24px;
  box-shadow: 0 4px 20px rgba(30, 144, 255, 0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-left {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.host-header h1 {
  font-family: 'Quicksand', 'Poppins', sans-serif;
  font-size: 28px;
  color: #1E90FF;
  margin: 0;
}

.concept-display {
  display: flex;
  gap: 10px;
  align-items: center;
}

.concept-label {
  font-family: 'Quicksand', 'Poppins', sans-serif;
  font-size: 14px;
  color: #696969;
  font-weight: 500;
}

.concept-value {
  font-family: 'Quicksand', 'Poppins', sans-serif;
  font-size: 16px;
  color: #1E90FF;
  font-weight: 700;
  background: #F0F8FF;
  padding: 6px 14px;
  border-radius: 10px;
}

.end-game-button {
  font-family: 'Quicksand', 'Poppins', sans-serif;
  padding: 14px 28px;
  border: 2px solid #FF6347;
  border-radius: 12px;
  background: white;
  color: #FF6347;
  font-size: 16px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
}

.end-game-button:hover {
  background: #FF6347;
  color: white;
}

/* Main Content */
.host-content {
  display: grid;
  grid-template-columns: 250px 1fr 300px;
  gap: 20px;
  flex: 1;
  overflow: hidden;
}

/* Students Sidebar */
.students-sidebar {
  background: white;
  border-radius: 20px;
  padding: 20px;
  box-shadow: 0 4px 20px rgba(30, 144, 255, 0.1);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.students-sidebar h3 {
  font-family: 'Quicksand', 'Poppins', sans-serif;
  font-size: 18px;
  color: #1E90FF;
  margin: 0 0 16px 0;
}

.students-list {
  display: flex;
  flex-direction: column;
  gap: 10px;
  overflow-y: auto;
}

.student-selector-button {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px;
  background: #F0F8FF;
  border: 2px solid transparent;
  border-radius: 12px;
  cursor: pointer;
  transition: all 0.3s ease;
  text-align: left;
}

.student-selector-button:hover {
  background: #E0F2FF;
}

.student-selector-button.active {
  background: #1E90FF;
  border-color: #1E90FF;
}

.student-selector-button.active .student-selector-name,
.student-selector-button.active .student-question-count {
  color: white;
}

.student-avatar-small {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: linear-gradient(135deg, #1E90FF, #00BFFF);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: 'Quicksand', 'Poppins', sans-serif;
  font-weight: 700;
  font-size: 18px;
  flex-shrink: 0;
}

.student-selector-button.active .student-avatar-small {
  background: white;
  color: #1E90FF;
}

.student-selector-info {
  display: flex;
  flex-direction: column;
  gap: 2px;
  flex: 1;
}

.student-selector-name {
  font-family: 'Quicksand', 'Poppins', sans-serif;
  font-size: 15px;
  color: #333;
  font-weight: 600;
}

.student-question-count {
  font-family: 'Quicksand', 'Poppins', sans-serif;
  font-size: 12px;
  color: #B0C4DE;
  font-weight: 500;
}

/* Conversation Panel */
.conversation-panel {
  background: white;
  border-radius: 20px;
  padding: 24px;
  box-shadow: 0 4px 20px rgba(30, 144, 255, 0.1);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.conversation-header {
  margin-bottom: 20px;
}

.conversation-header h2 {
  font-family: 'Quicksand', 'Poppins', sans-serif;
  font-size: 24px;
  color: #1E90FF;
  margin: 0 0 4px 0;
}

.conversation-header p {
  font-family: 'Quicksand', 'Poppins', sans-serif;
  font-size: 14px;
  color: #B0C4DE;
  margin: 0;
}

.conversation-log {
  flex: 1;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  gap: 16px;
  padding-right: 8px;
}

.empty-conversation {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  color: #B0C4DE;
  font-family: 'Quicksand', 'Poppins', sans-serif;
  font-size: 16px;
}

.host-log-entry {
  display: flex;
  gap: 12px;
  align-items: flex-start;
}

.host-question-bubble {
  flex: 1;
  background: #F0F8FF;
  border-radius: 16px 16px 16px 4px;
  padding: 14px 16px;
}

.bubble-timestamp {
  font-family: 'Quicksand', 'Poppins', sans-serif;
  font-size: 11px;
  color: #B0C4DE;
  margin-bottom: 6px;
}

.host-question-text {
  font-family: 'Quicksand', 'Poppins', sans-serif;
  font-size: 14px;
  color: #333;
  margin: 0;
}

.host-answer-bubble {
  min-width: 100px;
  padding: 12px 16px;
  border-radius: 16px 16px 4px 16px;
  display: flex;
  align-items: center;
  gap: 8px;
  font-family: 'Quicksand', 'Poppins', sans-serif;
  font-weight: 700;
  font-size: 16px;
}

/* Stats Panel */
.stats-panel {
  background: white;
  border-radius: 20px;
  padding: 24px;
  box-shadow: 0 4px 20px rgba(30, 144, 255, 0.1);
  display: flex;
  flex-direction: column;
  gap: 20px;
  overflow-y: auto;
}

.stats-panel h3 {
  font-family: 'Quicksand', 'Poppins', sans-serif;
  font-size: 18px;
  color: #1E90FF;
  margin: 0;
}

.stats-cards {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.stat-card {
  background: #F0F8FF;
  border-radius: 12px;
  padding: 16px;
  text-align: center;
}

.stat-number {
  font-family: 'Quicksand', 'Poppins', sans-serif;
  font-size: 32px;
  font-weight: 700;
  color: #1E90FF;
}

.stat-label {
  font-family: 'Quicksand', 'Poppins', sans-serif;
  font-size: 13px;
  color: #696969;
  margin-top: 4px;
}

.context-box {
  background: #FFF8DC;
  border-radius: 12px;
  padding: 16px;
  border-left: 4px solid #FFD700;
}

.context-box h4 {
  font-family: 'Quicksand', 'Poppins', sans-serif;
  font-size: 14px;
  color: #333;
  margin: 0 0 8px 0;
  font-weight: 600;
}

.context-box p {
  font-family: 'Quicksand', 'Poppins', sans-serif;
  font-size: 13px;
  color: #696969;
  margin: 0;
  line-height: 1.5;
}

/* Scrollbar */
.conversation-log::-webkit-scrollbar,
.students-list::-webkit-scrollbar,
.stats-panel::-webkit-scrollbar {
  width: 6px;
}

.conversation-log::-webkit-scrollbar-track,
.students-list::-webkit-scrollbar-track,
.stats-panel::-webkit-scrollbar-track {
  background: #F0F8FF;
  border-radius: 10px;
}

.conversation-log::-webkit-scrollbar-thumb,
.students-list::-webkit-scrollbar-thumb,
.stats-panel::-webkit-scrollbar-thumb {
  background: #B0C4DE;
  border-radius: 10px;
}

.conversation-log::-webkit-scrollbar-thumb:hover,
.students-list::-webkit-scrollbar-thumb:hover,
.stats-panel::-webkit-scrollbar-thumb:hover {
  background: #1E90FF;
}
